#!/bin/bash

set -e

echo "*********************************************************************"
echo "Building API..."
echo "*********************************************************************"
echo ""
echo $(cd src/api && dotnet build)

echo ""
echo "*********************************************************************"
echo "Starting electron app..."
echo "*********************************************************************"
echo ""
echo $(cd src/app && npm start)

echo ""
echo "*********************************************************************"
echo "Script execution completed."
echo "*********************************************************************"
echo ""
