#!/bin/bash

set -e

echo ""
echo "*********************************************************************"
echo "Running dotnet restore for API..."
echo "*********************************************************************"
echo ""
echo $(cd src/api && dotnet restore)

echo ""
echo "*********************************************************************"
echo "Running npm install for electron app..."
echo "*********************************************************************"
echo ""
echo $(cd src/app && npm install)

echo ""
echo "*********************************************************************"
echo "Script execution completed."
echo "*********************************************************************"
echo ""

